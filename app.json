{
  "expo": {
    "name": "mobile",
    "slug": "instant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,  // Requis pour react-native-reanimated et react-native-worklets
    "extra": {
      "eas": {
        "projectId": "17c80057-dc50-4d61-a7ae-5abe18088583"
      }
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "ndkVersion": "25.2.9519653",  // Compatible avec React Native 0.81.4
            "newArchEnabled": true  // Requis pour react-native-reanimated et react-native-worklets
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Instant+ to access your camera for streaming.",
          "microphonePermission": "Allow Instant+ to access your microphone for streaming."
        }
      ],
      "./plugins/withModularHeaders",
      "./plugins/withFixCpp20"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.instant.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "audio"
        ],
        "NSCameraUsageDescription": "Allow Instant+ to access your camera for streaming.",
        "NSMicrophoneUsageDescription": "Allow Instant+ to access your microphone for streaming."
      }
    },
    "android": {
      "package": "com.instant.app",
      "versionCode": 1,
      "minSdkVersion": 24,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "owner": "helloims-organization"
  }
}
